<h2>Edit this product</h2>

<%= form_for @product do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>
  <div class="form-group">
    <%= f.label :country_of_origin %>
    <%= f.text_field :country_of_origin %>
  </div>
  <div class="form-group">
    <%= f.label :product_photo %>
    <%= f.file_field :product_photo %>
  </div>
  <div>
    <%= f.submit  %>
  </div>
<% end %>