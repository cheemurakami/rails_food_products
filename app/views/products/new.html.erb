<h2>Add a new product</h2>

<% if @product.errors.any? %>
  <h3>...Something went wrong. Please fix these errors:</h3>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @product do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>
  <div class="form-group">
    <%= f.label :country_of_origin %>
    <%= f.text_field :country_of_origin %>
  </div>
  <div class="form-group">
    <%= f.label :product_photo %>
    <%= f.file_field :product_photo %>
  </div>
  <div>
    <%= f.submit  %>
  </div>
<% end %>