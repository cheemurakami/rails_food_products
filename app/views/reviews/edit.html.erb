<h2>Edit review to <%= @product.name %></h2>

<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.label :content_body %>
    <%= f.text_area :content_body %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  <div>
    <%= f.submit  %>
  </div>
<% end %>