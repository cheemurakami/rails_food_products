<h2>Add a new review</h2>

<% if @review.errors.any? %>
  <h4>...Something went wrong. Please fix these errors:</h4>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.label :content_body %>
    <%= f.text_area :content_body %>
  </div>
  <div class="form-group">
    <%= f.label :rate_this_product %>
    <%= f.text_field :rating %>
  </div>
  <div>
    <%= f.submit  %>
  </div>
<% end %>